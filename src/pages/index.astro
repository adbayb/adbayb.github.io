---
import { Button } from "../components/Button";
import { Global } from "../components/Global";
import { Text } from "../components/Text";
import { View } from "../components/View";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Astro description"
		/>
		<link
			rel="icon"
			type="image/svg+xml"
			href="/favicon.svg"
		/>
		<meta
			name="generator"
			content={Astro.generator}
		/>
		<title>Portfolio</title>
		<Global />
	</head>
	<body>
		<View
			as="main"
			display="flex"
			padding="medium"
			gap="small"
			minHeight="100vh"
			flexDirection="column"
			maxWidth="xlarge"
			margin="auto"
			alignItems="center"
		>
			<Text as="h1">Ayoub Adib</Text>
			<Button client:load>Action</Button>
			<Button client:load>Action</Button>
			<Button client:load>Action</Button>
			<Button client:load>Action</Button>
		</View>
	</body>
</html>
