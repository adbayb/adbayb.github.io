---
import { Button } from "../components/Button";
import { Text } from "../components/Text";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Astro description"
		/>
		<meta
			name="viewport"
			content="width=device-width"
		/>
		<link
			rel="icon"
			type="image/svg+xml"
			href="/favicon.svg"
		/>
		<meta
			name="generator"
			content={Astro.generator}
		/>
		<title>Portfolio</title>
	</head>
	<body>
		<main>
			<Button />
			<Text>Plop</Text>
		</main>
	</body>
</html>
<style is:global>
	html,
	body {
		margin: 0;
		padding: 0;
	}

	html {
		box-sizing: border-box;
	}

	*,
	*::before,
	*::after {
		box-sizing: inherit;
	}

	main {
		padding: 1rem;
	}
</style>
